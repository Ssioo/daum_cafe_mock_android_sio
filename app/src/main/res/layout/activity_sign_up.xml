<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.signup.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/header_signup"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_close_signup"
            android:src="@drawable/ic_chevron_left_black"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/daum_logo"
            android:scaleType="centerInside"
            android:layout_marginVertical="4dp"
            android:cropToPadding="true"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/et_email_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="60dp"
        android:hint="이메일 입력"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_edittext_blue"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="8dp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/et_pw_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="비밀번호 입력"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/background_edittext_blue"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_name_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이름 입력"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/background_edittext_blue"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_signup_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="회원가입"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginHorizontal="16dp" />

</LinearLayout>