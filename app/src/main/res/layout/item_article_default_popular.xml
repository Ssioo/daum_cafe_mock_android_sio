<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    android:background="@android:color/white"
    android:elevation="1dp"
    android:orientation="horizontal"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_num_article_popular_default"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@color/color_background_popular"
            android:textColor="@android:color/black"
            android:scaleX="1.2"/>

        <TextView
            android:id="@+id/tv_title_article_popular_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background_popular"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_title2_article_popular_default"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@color/color_background_popular"
            android:layout_marginTop="6dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_cafename_article_popular_default"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/color_background_popular"
            android:layout_marginTop="8dp"
            android:textSize="12sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_img_article_popular_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/iv_thumbnail_cafe_square" />
</LinearLayout>