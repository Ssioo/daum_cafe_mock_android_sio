<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.articledetail.ArticleDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:id="@+id/toolbar_articledetail">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="전체글"
                android:layout_gravity="center"
                android:id="@+id/tv_toolbar_title_articledetail" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/srl_articledetail"
            android:background="@color/color_background_setting"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:background="@android:color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Board Title"
                    android:layout_marginHorizontal="16dp"
                    android:textColor="@android:color/holo_red_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Article Title"
                    android:textSize="18sp"
                    android:layout_marginHorizontal="16dp"
                    android:textColor="@android:color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="16dp"
                    android:layout_height="64dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/iv_user_profile_img_articledetail"
                        android:src="@drawable/ic_user_default_profile"/>

                    <TextView
                        android:layout_toEndOf="@id/iv_user_profile_img_articledetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/iv_user_profile_img_articledetail"
                        android:layout_marginStart="12dp"
                        android:text="User Name" />

                    <TextView
                        android:layout_toEndOf="@id/iv_user_profile_img_articledetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_article_createtime_articledetail"
                        android:layout_marginStart="12dp"
                        android:layout_alignBottom="@id/iv_user_profile_img_articledetail"
                        android:text="HH:mm" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/tv_article_createtime_articledetail"
                        android:layout_alignTop="@id/tv_article_createtime_articledetail"
                        android:layout_alignBottom="@id/tv_article_createtime_articledetail" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_round_grey_padding"
                        android:text="1"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="32dp"
                        android:textSize="15sp"
                        android:text="Article Contents"
                        android:paddingHorizontal="16dp"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:src="@drawable/iv_cafe_thumbnail_square"
                        android:visibility="gone"
                        tools:visibility="visible" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>

            </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingVertical="14dp"
            android:background="#444450">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_height="wrap_content"
                android:id="@+id/iv_show_nav_article_detail"
                android:src="@drawable/ic_expand_less_white" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:id="@+id/tv_write_comment_articledetail"
                android:text="검색하기" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:id="@+id/tv_comment_articledetail"
                android:text="댓글" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:id="@+id/tv_url_articledetail"
                android:text="URL" />
        </LinearLayout>

    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-64dp"
        android:layout_gravity="right"
        layout="@layout/activity_cafe_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>